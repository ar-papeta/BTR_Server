<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BTR_Server</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="power" Match="NavLinkMatch.All">
                <span class="oi oi-flash" aria-hidden="true"></span> Power Control Module
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="stabilization">
                <span class="oi oi-expand-down" aria-hidden="true"></span> Stabilization Module
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="utility">
                <span class="oi oi-bug" aria-hidden="true"></span> Utility Module
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
